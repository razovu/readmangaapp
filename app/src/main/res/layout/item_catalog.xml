<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:animateLayoutChanges="true"
    android:layout_height="160dp"
    android:layout_margin="4dp">

        <ImageView
            android:id="@+id/catalog_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/catalog_gradient_shape"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/catalog_item_card"
            android:backgroundTint="@color/grey_alpha"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="22dp">


                <TextView
                    android:id="@+id/catalog_item_rate"
                    android:layout_width="84dp"
                    android:layout_height="22dp"
                    android:maxLines="1"
                    android:gravity="start|center"
                    android:fontFamily="@font/futura_medium"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:layout_marginStart="4dp"
                    app:drawableStartCompat="@drawable/ic_rate" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/catalog_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:fontFamily="@font/futura_medium"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="@string/lorem"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


</androidx.constraintlayout.widget.ConstraintLayout>