<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon" tools:ignore="PrivateResource">@drawable/abc_ic_ab_back_material</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescriptionTitleName">

        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/grey_alpha</item>

    </style>

    <style name="DescriptionInfo">

        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_alpha</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DescriptionTitleDescription">

        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="NewsDateStyle">

        <item name="android:fontFamily">@font/montserrat_thin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_alpha</item>

    </style>

    <style name="NewsTitleStyle">

        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/grey_alpha</item>

    </style>

    <style name="NewsDescriptionStyle">

        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_alpha</item>

    </style>

    <style name="DescriptionVolumesStyle">

        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="CatalogTitleNameStyle">

        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>