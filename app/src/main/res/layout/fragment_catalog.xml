<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp">
        <Button
            android:id="@+id/catalog_search_btn"
            android:drawableTop="@drawable/ic_search"
            android:background="@color/invisible"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_rm_dark" />

        <Button
            android:id="@+id/catalog_filter"
            android:layout_gravity="end"
            android:background="@color/invisible"
            android:drawableTop="@drawable/ic_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:id="@+id/catalog_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipChildren="true"
        android:clipToPadding="true"
        tools:listitem="@layout/item_catalog"/>

</FrameLayout>