<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_profile_manga_img"
        android:padding="2dp"
        android:layout_width="80dp"
        android:layout_height="100dp"/>

    <ImageView
        android:layout_marginEnd="4dp"
        android:id="@+id/item_profile_fav_btn"
        android:src="@drawable/ic_favorite_filled"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end|top"/>

    <LinearLayout
        android:layout_marginStart="82dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_profile_rate"
            android:layout_gravity="top|start"
            android:layout_marginStart="2dp"
            android:layout_width="92dp"
            android:gravity="center_vertical"
            android:layout_height="22dp"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:text="@string/app_name"
            app:drawableStartCompat="@drawable/ic_rate" />

        <TextView
            android:id="@+id/item_profile_manga_name"
            style="@style/DescriptionTitleDescription"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/item_profile_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

        <TextView
            android:maxLines="2"
            android:id="@+id/item_profile_last_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

    </LinearLayout>


</FrameLayout>