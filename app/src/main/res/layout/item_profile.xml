<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="160dp"
    android:layout_margin="4dp">

        <ImageView
            android:id="@+id/profile_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            android:src="@drawable/ic_launcher_foreground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/catalog_gradient_shape"
            android:layout_gravity="bottom" />

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/grey_alpha"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="22dp">

                <ImageView
                    android:padding="2dp"
                    android:id="@+id/_profile_item_fav_btn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="end"/>

                <TextView
                    android:id="@+id/profile_item_date"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="2dp"
                    android:layout_width="92dp"
                    android:gravity="center_vertical"
                    android:layout_height="22dp"
                    android:maxLines="1"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/futura_medium"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    app:drawableStartCompat="@drawable/ic_rate" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/profile_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:fontFamily="@font/futura_medium"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="@string/lorem"
            android:layout_gravity="bottom"
            />


</FrameLayout>